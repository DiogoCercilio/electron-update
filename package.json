{
  "name": "electron-quick-start",
  "version": "1.1.0",
  "description": "A minimal Electron application",
  "main": "electron.js",
  "scripts": {
    "ship": "electron-builder --win -p always",
    "start": "electron .",
    "pack": "electron-builder --dir --win",
    "dist": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "release": "export GH_TOKEN=d5f6ca9c2d213a01b0ce648e45eab62cb5a4b987 && build --win"
  },
  "author": "GitHub",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-packager": "13.0.1",
    "electron-builder": "20.38.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DiogoCercilio/electron-update.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-updater": "4.0.6"
  },
  "build": {
    "appId": "hello-my-app",
    "win": {
      "target": "NSIS"
    },    
    "publish": [
      "github"
    ]
  }
}
