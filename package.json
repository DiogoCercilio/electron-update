{
  "name": "electron-quick-start",
  "version": "1.0.1",
  "description": "A minimal Electron application",
  "main": "electron.js",
  "scripts": {
    "ship": "electron-builder --mac -p always",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "build"    
  },
  "author": "GitHub",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-packager": "13.0.1",
    "electron-builder": "20.38.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:DiogoCercilio/electron-update.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-updater": "4.0.6"
  },
  "build": {
    "appId": "hello-my-app",
    "mac": {
      "category": "public.app-category.developer-tools",
      "type": "distribution"
    },
    "publish": [
      "github"
    ]    
  }
}
